# =====================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =====================================
# SANITY CMS CONFIGURATION
# =====================================
# Sanity project ID - found in your Sanity dashboard
VITE_SANITY_PROJECT_ID=your_sanity_project_id_here

# Sanity dataset name (usually "production" or "development")
VITE_SANITY_DATASET=production

# Sanity API version (format: YYYY-MM-DD, strictly validated)
VITE_SANITY_API_VERSION=2024-01-01

# Sanity secret token - get from Sanity dashboard > API > Tokens
# This token should have read/write permissions for content operations
VITE_SANITY_SECRET_TOKEN=your_sanity_secret_token_here

# =====================================
# AUTHENTICATION - CLERK
# =====================================
# Clerk secret key - server-side only, used for backend operations
# Must be at least 40 characters, get from Clerk Dashboard > API Keys
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Clerk publishable key - client-side safe (optional)
# Get from Clerk Dashboard > API Keys
# VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Session secret for server-side sessions
# Must be at least 32 characters, generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here

# =====================================
# EXTERNAL SERVICES
# =====================================
# External service URL for API endpoints and AI chat
# Default: http://localhost:4000 (will be used if not specified)
VITE_EXTERNAL_SERVICE_URL=https://your-api-service.com

# =====================================
# ANALYTICS & MONITORING
# =====================================
# Vercel Analytics (automatically configured if deploying to Vercel)
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# =====================================
# DEVELOPMENT & TESTING
# =====================================
# Node environment
NODE_ENV=production

# Application URL (used for webhooks and redirects)
APP_URL=https://your-domain.com

# =====================================
# SECURITY CONFIGURATION (Optional)
# =====================================
# Webhook signing secrets (optional, for webhook validation)
# CLERK_WEBHOOK_SIGNING_SECRET=your_clerk_webhook_secret_here

# CORS allowed origins (optional, comma-separated)
# CORS_ORIGINS=https://your-domain.com,https://your-api-domain.com

# Rate limiting configuration (optional)
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
# RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (default: 100)
# RATE_LIMIT_MAX_REQUESTS=100